{
    "version": 2,
    "builds": [
        {
            "src": "DAAS_API/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "500mb", "runtime": "python3.9" }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "staticfiles_build" }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "DAAS_API/wsgi.py" 
        }
    ]
}